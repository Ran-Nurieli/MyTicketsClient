<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyTicketsClient.Views.BuyTicket"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModel="clr-namespace:MyTicketsClient.ViewModels"
    Title="Buy Ticket!"
    BackgroundColor="#F4F6F8"
    x:DataType="ViewModel:BuyTicketViewModel">



    <ScrollView Margin="10">
        <StackLayout Spacing="20">

            <Image Source="iconnew.png"
                   HeightRequest="60"
                   HorizontalOptions="Center" />

            <Grid
                ColumnDefinitions="*"
                HorizontalOptions="Center"
                RowDefinitions="auto"
                RowSpacing="2">
                <HorizontalStackLayout
                    Margin="0,5,0,0"
                    HorizontalOptions="Center"
                    Spacing="10">
                    <Button
                        BackgroundColor="#1E8449"
                        CornerRadius="10"
                        TextColor="White"
                       
                        Command="{Binding LoadTicketsCommand}"
                        Text="Load Ticket"
                        WidthRequest="120" />
                    <Button
                        BackgroundColor="#F8C471"
                        CornerRadius="10"
                        TextColor="Black"
                        
                        Command="{Binding ClearFilterCommand}"
                        Text="Clear Filter"
                        WidthRequest="120" />
                </HorizontalStackLayout>
            </Grid>

            <CollectionView Margin="10"
                            ItemsSource="{Binding TicketsToDisp}"
                            SelectedItem="{Binding SelectedTicket}"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="ViewModel:TicketDisp">

                                <StackLayout>
                                    <Label FontSize="Small"
                                           Text="{Binding Game}"
                                           TextColor="#1E3D59"
                                           LineBreakMode="WordWrap"/>
                                    <Label FontSize="Small"
                                           Text="{Binding Description}"
                                           TextColor="#1E3D59"
                                           LineBreakMode="WordWrap"/>

                                    <Label FontSize="Small"
                                           Text="{Binding PriceDescription}"
                                           TextColor="#4B6584"
                                           LineBreakMode="WordWrap"/>
                                </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout
                        Margin="10"
                        BackgroundColor="#E0E0E0"
                        HeightRequest="180"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Padding="20">
                        <Image Source="empty_tickets.png"
                               HeightRequest="80"/>
                        <Label Text="No tickets available."
                               TextColor="Gray"
                               HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <Picker
                Title="Select Gate"
                TitleColor="#1E3D59"
                TextColor="Black"
                BackgroundColor="White"
                ItemsSource="{Binding Gates}"
                SelectedItem="{Binding SelectedGate}" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button
                    Command="{Binding FilterCommand}"
                    Text="סנן"
                    BackgroundColor="#2980B9"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="100"
                    />
                <Button
                    Command="{Binding ClearFilterCommand}"
                    Text="נקה סינון"
                    BackgroundColor="#D6EAF8"
                    TextColor="Black"
                    CornerRadius="10"
                    WidthRequest="100"
                   />
            </HorizontalStackLayout>

            <Label
                HorizontalOptions="Center"
                IsVisible="{Binding ShowErrorMessage}"
                Text="{Binding ErrorMessage}"
                TextColor="Red"
                FontAttributes="Bold"
                VerticalOptions="Center" />

            <Button
                VerticalOptions="Center"
                HorizontalOptions="Center"
                BackgroundColor="#2E86C1"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="150"
                Text="Buy Ticket"
                FontAttributes="Bold"
                Command="{Binding BuyTicketCommand}"
               />
        </StackLayout>
    </ScrollView>
</ContentPage>
