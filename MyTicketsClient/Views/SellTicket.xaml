<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyTicketsClient.Views.SellTicket"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModel="clr-namespace:MyTicketsClient.ViewModels"
    Title="Sell Ticket"
    x:DataType="ViewModel:SellTicketViewModel">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label
            BackgroundColor="White"
            FontSize="Large"
            HorizontalOptions="Center"
            Text="Upload the file!"
            TextColor="Black"
            VerticalOptions="Center" />


        <Button
            Command="{Binding PickFileCommand}"
            HorizontalOptions="Center"
            Text="choose a File" />

        <!--  Button to upload the selected file  -->
        <Button
            Command="{Binding UploadFileCommand}"
            HorizontalOptions="Center"
            Text="Upload File" />

        <!--  Label to show status message  -->
        <Label
            HorizontalOptions="CenterAndExpand"
            LineBreakMode="WordWrap"
            MaxLines="5"
            Text="{Binding StatusMessage}"
            VerticalOptions="CenterAndExpand" />

        <Label
            HorizontalOptions="Center"
            Text="enter the price of the ticket"
            TextColor="Black"
            VerticalOptions="Center" />

        <Entry
            x:Name="price"
            HorizontalOptions="Center"
            Placeholder="enter ticket price"
            Text="{Binding TicketPrice}"
            TextColor="Black"
            VerticalOptions="Center" />


        <Label
            HorizontalOptions="Center"
            Text="enter row"
            TextColor="Black"
            VerticalOptions="Center" />
        <Entry
            x:Name="Row"
            HorizontalOptions="Center"
            Placeholder="enter the row"
            Text="{Binding Row}"
            TextColor="Black"
            VerticalOptions="Center" />


        <Label
            HorizontalOptions="Center"
            Text="enter seats"
            TextColor="Black"
            VerticalOptions="Center" />
        <Entry
            HorizontalOptions="Center"
            Text="{Binding Seats}"
            TextColor="Black"
            VerticalOptions="Center" />

        <Label
            HorizontalOptions="Center"
            Text="enter gate number"
            TextColor="Black"
            VerticalOptions="Center" />



        <Entry
            x:Name="Gate"
            HorizontalOptions="Center"
            Placeholder="enter the gate"
            Text="{Binding Gate}"
            TextColor="Black"
            VerticalOptions="Center" />



        <Label
            BackgroundColor="White"
            HorizontalOptions="Center"
            Text="Warning! selling a ticket for more than the original ticket price will get you banned!"
            TextColor="Red"
            VerticalOptions="Center" />

        <Button
            Command="{Binding PublishFileCommand}"
            Text="publish ticket"
            TextColor="White" />

        <!--<Button
            Command="{Binding SellCommand}"
            Text="sell ticket"
            TextColor="Blue"
            />-->
        

    </VerticalStackLayout>
</ContentPage>